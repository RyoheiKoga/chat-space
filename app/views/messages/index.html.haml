      .message{"data-message_id" => "2365"}
        .message__upper-info
          %p.message__upper-info__talker
            ユーザー名
          %p.message__upper-info__date
            2019/05/18(Sat) 12:05:00
        %p.message__text
          テストテストテスト
    .form
      %form.new_message.new_message{enctype: "multipart/form-data", method: "post"}
        .input-box
          %input.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}
          %label.input-box__image{for: "message_image"}
            %i.fa.fa-image
            %input.input-box__image__file{name: "message[image]", type: "file"}
        %input.submit-btn{"data-disable-with" => "Send", name: "commit", type: "submit", value: "Send"}
